
{
    "extends": "@newsteam",
    "globals": {
        "$": false,
        "__dirname": false,
        "__filename": false,
        "Buffer": false,
        "FB": false,
        "ga": false,
        "global": false,
        "google": false,
        "module": false,
        "Modernizr": false,
        "process": false,
        "Promise": false,
        "require": false,
        "System": false,
        "Uint8Array": false
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "only-warn"
    ],
    "rules": {
        "no-await-in-loop": "off",
        "security/detect-non-literal-fs-filename": "off",
        "node/no-process-exit": "off",
        "more/no-c-like-loops": "off"
    }
}